<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/btn_basic_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="基础训练"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_codec_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FFmpeg编解码"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_basic_training"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_process_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FFmpeg处理图像"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_codec_training"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_process_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FFmpeg处理音频"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@+id/btn_process_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>